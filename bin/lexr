#!/usr/bin/env bash

# version

VERSION="0.0.1"

# store

STORE=~/.lexr

#
# Print usage info
#

usage() {
  cat <<EOF

  Usage: lexr [options] [url]

  Commands:

    # shorten url and add to list
    $ lexr add <url>

    # list shortened urls
    $ lexr list
    $ lexr ls

    # display statistics about the bookmarks
    $ lexr stats

    # clear url history
    $ lexr clear

  Options:

    -V, --version print lexr version
    -h, --help print this usage info

EOF
}

#
# shorten url and add to list
#

shorten_url() {
  local now=$(date +%Y-%m-%d)
  local url=$1
  local res=$(curl --silent -X POST -d "text_mode=1&url=$url" http://lexr.us/api/url)

  if [[ $res == *"400"* ]]; then
    echo
    echo "  It seems as if lexr.us can't shorten $url."
    echo
  else
    echo
    echo "  Shortened url via lexr.us API"
    echo
    echo "    date: $now"
    echo "    url: $url"
    echo "    result: $res"
    echo
    echo "$now|$url|$res" >> $STORE
  fi;
}

#
# clear lexr history
#

clear_history() {
  rm $STORE
}

#
# parse args
#

while test $# -ne 0; do
  arg=$1; shift
  case $arg in
    -V|--version) echo $VERSION; exit ;;
    -h|--help) usage; exit ;;
    clear) clear_history; exit ;;
    add) shorten_url "$@"; exit ;;
  esac
done
